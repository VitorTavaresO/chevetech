#:kivy 2.0.0

MDScreen:
    md_bg_color: 0, 0, 0, 0

    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            size_hint_y: None
            height: dp(70)
            md_bg_color: 0, 0, 0, 0
            padding: "10dp"

            MDLabel:
                id: car_label
                text: "Chevete 1986"
                font_style: "Title"
                color: 1, 1, 1, 1
                halign: "right"
                size_hint_x: None
                width: dp(455)
                bold: True
            MDLabel:
                id: datetime_label
                text: ""
                color: 1, 1, 1, 1
                font_style: "Title"
                halign: "center"
                size_hint_x: None
                width: dp(550)
                bold: True

        GridLayout:
            cols: 3
            spacing: "10dp"
            padding: "10dp"
            
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                MDCard:
                    style: "elevated"
                    theme_bg_color: "Custom"
                    md_bg_color: 1, 1, 1, 0
                    size_hint: None, None
                    size: "100dp", "100dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    elevation_level: 5
                    AsyncImage:
                        source: "icons/radio.png"
                        size_hint: 1, 1
                        size: "100dp", "100dp"
            
