#:kivy 2.0.0
ScreenManager:
    MainScreen:
    ConfigScreen:

<MainScreen>:
    name: "main"
    
    md_bg_color: 0.1, 0.1, 0.1, 1

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            type: "small"
            size_hint_x: 1
            pos_hint: {"center_x": .5, "center_y": .5}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"

            MDTopAppBarTitle:
                id: datetime_label
                text: ""
                halign: "center"
                pos_hint: {"center_x": .5}


        GridLayout:
            cols: 3
            spacing: "10dp"
            padding: "10dp"
            
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                MDCard:
                    style: "filled"
                    theme_bg_color: "Custom"
                    md_bg_color: 1, 1, 1, 0
                    size_hint: None, None
                    size: "150dp", "150dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    elevation_level: 5
                    AsyncImage:
                        source: "icons/radio.png"
            
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                MDCard:
                    style: "filled"
                    theme_bg_color: "Custom"
                    md_bg_color: 1, 1, 1, 0
                    size_hint: None, None
                    size: "150dp", "150dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    elevation_level: 5
                    AsyncImage:
                        source: "icons/smartphone.png"

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                MDCard:
                    style: "filled"
                    theme_bg_color: "Custom"
                    md_bg_color: 1, 1, 1, 0
                    size_hint: None, None
                    size: "150dp", "150dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    AsyncImage:
                        source: "icons/vehicle.png"

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                MDCard:
                    style: "filled"
                    theme_bg_color: "Custom"
                    md_bg_color: 1, 1, 1, 0
                    size_hint: None, None
                    size: "150dp", "150dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    AsyncImage:
                        source: "icons/location.png"

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                MDCard:
                    style: "filled"
                    theme_bg_color: "Custom"
                    md_bg_color: 1, 1, 1, 0
                    size_hint: None, None
                    size: "150dp", "150dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    AsyncImage:
                        source: "icons/files.png"

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                MDCard:
                    style: "filled"
                    theme_bg_color: "Custom"
                    md_bg_color: 1, 1, 1, 0
                    size_hint: None, None
                    size: "150dp", "150dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_press:
                        app.root.transition.direction = "left"
                        app.root.current = "config"
                    AsyncImage:
                        source: "icons/config.png"
<ConfigScreen>:
    name: "config"
    
    md_bg_color: 0.1, 0.1, 0.1, 1
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        MDIconButton:
            icon: "arrow-left"
            style: "tonal"
            theme_bg_color: "Custom"
            md_bg_color: 0.1, 0.1, 0.1, 0
            theme_icon_color: "Custom"
            icon_color: "white"
            on_press:
                app.root.transition.direction = "right"
                app.root.current = "main"
