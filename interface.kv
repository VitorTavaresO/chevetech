#:kivy 2.0.0

MDScreen:
    md_bg_color: 0.031, 0.059, 0.035

    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            size_hint_y: None
            height: dp(70)
            md_bg_color: 0.275, 0.929, 0.329, 0.8
            padding: "10dp"

            MDLabel:
                id: car_label
                text: "Chevete 1986"
                font_style: "Title"
                halign: "right"
                size_hint_x: None
                width: dp(455)
                bold: True
            MDLabel:
