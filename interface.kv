#:kivy 2.0.0
MDScreen:
    md_bg_color: 0.1, 0.1, 0.1, 1

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            type: "small"
            size_hint_x: 1
            pos_hint: {"center_x": .5, "center_y": .5}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"

            MDTopAppBarTitle:
                id: datetime_label
                text: ""
                halign: "center"
                pos_hint: {"center_x": .5}


        GridLayout:
            cols: 3
            spacing: "10dp"
            padding: "10dp"
            
            AnchorLayout:
