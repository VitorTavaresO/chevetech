#:kivy 2.0.0

<SettingsScreen>:
    name: "settings"
    
    md_bg_color: 0.1, 0.1, 0.1, 1
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        MDIconButton:
            icon: "arrow-left"
            style: "tonal"
            theme_bg_color: "Custom"
            md_bg_color: 0.1, 0.1, 0.1, 0
            theme_icon_color: "Custom"
            icon_color: "white"
            on_press:
                app.root.transition.direction = "right"
                app.root.current = "main"
    
    GridLayout:
        id: settings_grid
        cols: 1
        spacing: "10dp"
        padding: "40dp"
        MDCard:
            id: connection_card
            style: "filled"
            theme_bg_color: "Custom"
            md_bg_color: 0.894, 0.882, 0.914
            size_hint: None, None
            size: "950dp", "100dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            radius: [40, 40, 40, 40]
            on_press:
                app.root.transition.direction = "left"
                app.root.current = "radio"
            MDRelativeLayout:
                MDButton:
                    id: connection_toggle_button
                    style: "filled"
                    theme_bg_color: "Custom"
                    md_bg_color: 0.1, 0.1, 0.1, 1
                    theme_text_color: "Custom"
                    text_color: 0.106, 0.106, 0.129
                    pos_hint: {"top": 0.75, "right": 0.99}
                    size_hint: None, None
                    size: "50dp", "50dp"
                    on_press:
                        root.toggle_button_text("connection_card", self)
                    MDButtonText:
                        id: connection_toggle_text
                        text: "OFF"
                        bold: "True"

                MDLabel:
                    color: 0.106, 0.106, 0.129
                    bold: True
                    text: "Connections"
                    padding: [10, 10, 10, 10]
        MDCard:
            id: hotspot_card
            style: "filled"
            theme_bg_color: "Custom"
            md_bg_color: 0.894, 0.882, 0.914
            size_hint: None, None
            size: "950dp", "100dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            radius: [40, 40, 40, 40]
            on_press:
                app.root.transition.direction = "left"
                app.root.current = "hotspot"
            MDRelativeLayout:
                id: hotspot_card_relative
                MDButton:
                    id: hotspot_toggle_button
                    style: "filled"
                    theme_bg_color: "Custom"
                    md_bg_color: 0.1, 0.1, 0.1, 1
                    theme_text_color: "Custom"
                    text_color: 0.106, 0.106, 0.129
                    pos_hint: {"top": 0.75, "right": 0.99}
                    size_hint: None, None
                    size: "50dp", "50dp"
                    on_press:
                        root.toggle_button_text("hotspot_card", self)
                    MDButtonText:
                        id: hotspot_toggle_text
                        text: "OFF"
                        bold: "True"

                MDLabel:
                    color: 0.106, 0.106, 0.129
                    bold: True
                    text: "Hotspot"
                    padding: [10, 10, 10, 10]


<HotspotScreen>:
    name: "hotspot"
    id: "hotspot"

    md_bg_color: 0.1, 0.1, 0.1, 1
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        MDIconButton:
            icon: "arrow-left"
            style: "tonal"
            theme_bg_color: "Custom"
            md_bg_color: 0.1, 0.1, 0.1, 0
            theme_icon_color: "Custom"
            icon_color: "white"
            on_press:
                app.root.transition.direction = "right"
                app.root.current = "settings"
    
    GridLayout:
        cols: 1
        spacing: "10dp"
        padding: "40dp"
        MDCard:
            id: hotspot_toggle_card
            style: "filled"
            theme_bg_color: "Custom"
            md_bg_color: 0.894, 0.882, 0.914
            size_hint: None, None
            size: "950dp", "100dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            radius: [40, 40, 40, 40]
            on_press:
                app.root.transition.direction = "left"
                app.root.current = "hotspot"
            MDRelativeLayout:
                MDButton:
                    id: hotspot_toggle_button
                    style: "filled"
                    theme_bg_color: "Custom"
                    md_bg_color: 0.1, 0.1, 0.1, 1
                    theme_text_color: "Custom"
                    text_color: 0.106, 0.106, 0.129
                    pos_hint: {"top": 0.75, "right": 0.99}
                    size_hint: None, None
                    size: "50dp", "50dp"
                    on_press:
                        root.toggle_button_text("hotspot_card", self)
                    MDButtonText:
                        id: hotspot_toggle_text
                        text: "OFF"
                        bold: "True"

                MDLabel:
                    color: 0.106, 0.106, 0.129
                    bold: True
                    text: "Hotspot"
                    padding: [30, 10, 10, 10]
        MDCard:
            id: hotspot_settings_card
            theme_bg_color: "Custom"
            md_bg_color: 0.894, 0.882, 0.914
            size_hint: None, None
            size: "950dp", "200dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            radius: [40, 40, 40, 40]
            on_release: root.show_dialog()
            GridLayout:
                cols: 1
                padding: "20dp"
                MDLabel:
                    color: 0.106, 0.106, 0.129
                    italic: True
                    text: "Nome da Rede"
                    padding: [10, 0, 0, 0]
                MDLabel:
                    id: hotspot_name
                    color: 0.106, 0.106, 0.129
                    bold: True
                    text: ""
                    padding: [10, 0, 0, 20]
                    size_hint_x: None
                    width: 200
                MDDivider:
                MDLabel:
                    color: 0.106, 0.106, 0.129
                    italic: True
                    text: "Senha da Rede"
                    padding: [10, 20, 0, 0]
                    size_hint_x: None
                    width: 200
                MDLabel:
                    id: hotspot_password
                    color: 0.106, 0.106, 0.129
                    bold: True
                    text: ""
                    padding: [10, 0, 0, 0]
                    size_hint_x: None
                    width: 200

                    
                        


