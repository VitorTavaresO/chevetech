#:kivy 2.0.0

<VehicleScreen>:
    name: "vehicle"
    
    md_bg_color: 0.1, 0.1, 0.1, 1
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        MDIconButton:
            icon: "arrow-left"
            style: "tonal"
            theme_bg_color: "Custom"
            md_bg_color: 0.1, 0.1, 0.1, 0
            theme_icon_color: "Custom"
            icon_color: "white"
            on_press:
                app.root.transition.direction = "right"
                app.root.current = "main"
    
    GridLayout:
        cols: 1
        spacing: "10dp"
        padding: "40dp"
        MDCard:
            id: vehicle_name_card
            theme_bg_color: "Custom"
            md_bg_color: 0.894, 0.882, 0.914
            size_hint: None, None
            size: "950dp", "100dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            radius: [40, 40, 40, 40]
            on_release: root.show_dialog()
            GridLayout:
                cols: 1
                padding: "20dp"
                MDLabel:
                    color: 0.106, 0.106, 0.129
                    italic: True
                    text: "Nome do Ve√≠culo"
                    padding: [10, 0, 0, 0]
                MDLabel:
                    id: vehicle_name
                    color: 0.106, 0.106, 0.129
                    bold: True
                    text: "Chevette 1986"
                    padding: [10, 0, 0, 20]
                    size_hint_x: None
                    width: 200
